<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="600dp"
    android:layout_centerInParent="true"
    android:excludeFromRecents="true"
    tools:context=".activities.AddBookActivity">

    <ScrollView
        android:id="@+id/add_book_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_book_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/select_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_book_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Select image" />

            <EditText
                android:id="@+id/add_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_image_btn"
                android:layout_margin="5dp"
                android:hint="Title"
                android:maxLines="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/add_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_book_title"
                android:layout_margin="5dp"
                android:hint="Author"
                android:maxLines="1"
                android:textAlignment="center" />


            <EditText
                android:id="@+id/add_book_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/add_book_author"
                android:layout_margin="5dp"
                android:hint="Description"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/add_book_chapters_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_book_description"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="Fill with chapters"
                android:textColor="#828282" />

            <RelativeLayout
                android:id="@+id/add_book_chapters_relLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_book_chapters_checkbox"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/add_book_chapters_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="8dp"
                    android:text="Chapters count:" />

                <EditText
                    android:id="@+id/add_book_chapters_edtTxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/add_book_chapters_txtView"
                    android:layout_marginLeft="8dp" />

                <Button
                    android:id="@+id/add_book_generate_chapters_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Generate"
                    android:layout_toRightOf="@id/add_book_chapters_edtTxt"
                    android:layout_marginLeft="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_book_chapters_recView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_book_chapters_edtTxt"
                    android:layout_margin="15dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_lay_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_book_chapters_relLay"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/add_book_pages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight=".7"
                    android:hint="Pages"
                    android:maxLines="1"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:layout_weight=".3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_lay_0">

                <Button
                    android:id="@+id/add_book_ok_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight=".5"
                    android:text="OK" />

                <Button
                    android:id="@+id/add_book_cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight=".5"
                    android:text="Cancel" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.OpenedBookActivity">

    <RelativeLayout
        android:id="@+id/rel_lay_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="140dp"
            android:layout_height="192.5dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/book_image">

            <TextView
                android:id="@+id/bookTitle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_book_title"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookAuthor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookTitle_text"
                android:layout_marginTop="10dp"
                android:text="@string/placeholder_book_author"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/bookPages_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookAuthor_text"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/placeholder_page"
                android:textAlignment="center"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linlay2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/rel_lay_1">
        <ScrollView
            android:id="@+id/rel_lay_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/bookDescription_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/very_long_lorem_ipsum" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/linlay3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <com.github.nikartm.button.FitButton
                android:id="@+id/setToRead_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:lines="2"
                android:gravity="center"

                app:fb_text="@string/want_to_read"
                app:fb_textSize="14sp"
                app:fb_textAllCaps="true"
                app:fb_textColor="@color/white"
                app:fb_textStyle="bold|italic"
                app:fb_textPaddingStart="5dp"
                app:fb_textPaddingEnd="5dp"
                app:fb_backgroundColor="#ed0909"
                app:fb_cornerRadius="15dp"/>

            <com.github.nikartm.button.FitButton
                android:id="@+id/setCurrReading_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:lines="2"
                android:gravity="center"

                app:fb_text="@string/currently_reading"
                app:fb_textSize="14sp"
                app:fb_textAllCaps="true"
                app:fb_textColor="@color/white"
                app:fb_textPaddingStart="5dp"
                app:fb_textPaddingEnd="5dp"
                app:fb_textStyle="bold|italic"
                app:fb_backgroundColor="#ed0909"
                app:fb_cornerRadius="15dp"/>

            <com.github.nikartm.button.FitButton
                android:id="@+id/setAlreadyRead_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:lines="2"
                android:gravity="center"

                app:fb_text="@string/already_read"
                app:fb_textSize="14sp"
                app:fb_textAllCaps="true"
                app:fb_textColor="@color/white"
                app:fb_textStyle="bold|italic"
                app:fb_textPaddingStart="5dp"
                app:fb_textPaddingEnd="5dp"
                app:fb_backgroundColor="#ed0909"
                app:fb_cornerRadius="15dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
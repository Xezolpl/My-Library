<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/language" >

        <ListPreference
            app:defaultValue="@string/english"
            app:entries="@array/languages"
            app:entryValues="@array/languages_values"
            app:key="lang"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme">

    <ListPreference
        app:defaultValue="@string/light"
        app:entries="@array/themes"
        app:entryValues="@array/themes_values"
        app:key="theme"
        app:title="@string/theme"
        app:useSimpleSummaryProvider="true"/>

</PreferenceCategory>

    <PreferenceCategory app:title="@string/backup">

        <Preference android:title="@string/import_db" android:key="import" />
        <Preference android:title="@string/export_db" android:key="export" />

    </PreferenceCategory>

</PreferenceScreen>

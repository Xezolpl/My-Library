<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/language">

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/languages"
            app:entryValues="@array/languages_values"
            app:key="lang"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/backup">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/backup_title"
            app:summaryOn="@string/backup_on"
            app:summaryOff="@string/backup_off"/>

        <Preference android:title="Export database" />

    </PreferenceCategory>

</PreferenceScreen>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Standard AppTheme -->
    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorBackground</item>

        <item name="textColorOnPrimaryColor">@color/white</item>

        <item name="android:windowBackground">?attr/backgroundColor</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>

        <item name="android:spinnerDropDownItemStyle">@style/Spinner.DropDownItem</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <!-- Mild AppTheme -->
    <style name="AppThemeMildDialog" parent="AppThemeDialog">

        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="backgroundColor">@color/colorBackground2</item>

        <item name="textColorOnPrimaryColor">@color/white</item>

    </style>


    <!-- Dark AppTheme -->
    <style name="AppThemeDarkDialog" parent="AppThemeDialog">

        <item name="colorPrimary">@color/colorPrimary3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark3</item>
        <item name="colorAccent">@color/colorAccent3</item>
        <item name="backgroundColor">@color/colorBackground3</item>

        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="textColorOnPrimaryColor">?attr/backgroundColor</item>

        <item name="android:spinnerDropDownItemStyle">@style/Spinner.DropDownItem.Dark</item>

    </style>

    <style name="AppThemeDarkDialog.AlertDialog">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:background">?colorPrimary</item>
    </style>


    <!-- Light AppTheme -->
    <style name="AppThemeLightDialog" parent="AppThemeDialog">

        <item name="colorPrimary">@color/colorPrimary4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark4</item>
        <item name="colorAccent">@color/colorAccent4</item>
        <item name="backgroundColor">@color/colorBackground4</item>

        <item name="textColorOnPrimaryColor">?attr/colorPrimaryDark</item>

    </style>


</resources>
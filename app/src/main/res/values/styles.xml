<resources>

    <!-- Base FitButton stylization -->
    <style name="FitButton">

        <item name="android:gravity">center_vertical</item>
        <item name="fb_iconPosition">left</item>
        <item name="fb_divWidth">1dp</item>

        <item name="fb_cornerRadius">15dp</item>

        <item name="fb_backgroundColor">?attr/colorPrimary</item>
        <item name="fb_divColor">?attr/textColorOnPrimaryColor</item>
        <item name="fb_iconColor">?attr/textColorOnPrimaryColor</item>
        <item name="fb_textSize">14sp</item>
        <item name="fb_textColor">?attr/textColorOnPrimaryColor</item>
    </style>

    <style name="MaterialEditText">

        <item name="met_textColor">?android:textColor</item>
        <item name="met_underlineColor">?attr/colorAccent</item>
        <item name="met_textColorHint">?attr/colorAccent</item>
        <item name="met_primaryColor">?attr/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorPrimary">?attr/textColorOnPrimaryColor</item>
        <item name="android:textColorSecondary">?attr/textColorOnPrimaryColor</item>
        <item name="actionBarTabTextStyle">?attr/textColorOnPrimaryColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Spinner.DropDownItem">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Spinner.DropDownItem.Dark">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>


</resources>
